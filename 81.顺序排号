#include<stdio.h>//头文件 
int main()//主函数 
{
  int i,k,n,m;//定义整型变量
  int num[50];//定义整型数组 
  int *p;//定义指针变量 
  printf("输入n=");//提示语句 
  scanf("%d",&n);//键盘输入 
  p=num;
  for(i=0;i<n;i++)
  {
    *(p+i)=i+1; //以1至n为序给每个人编号 
  }
  i=0; //i为每次循环时计数变量 
  k=0; //k为按1，2，3报数时的计数变量 
  m=0; //m为退出人数 
  while(m<n-1)
  { //当退出人数比n-1少时执行循环体 
    if(*(p+i)!=0)
    {
      k++;
    }
    if(k==3)
    {
      *(p+i)=0; //对退出的人的编号置为0 
      k=0;
      m++;
    }
    i++;
    if(i==n)
    { //报数到尾后，i恢复为0 
      i=0;
    }
  }
  while(*p==0)
  {
    p++;
  }
  printf("最后一个数是:%d\n",*p);//输出结果 
  return 0;//主函数返回值为0 
}
