#include<stdio.h>//头文件 
int main()//主函数 
{
  int i,j,k;//定义整型变量 
  for(i=0;i<4;i++)//循环四次，打出前四行
  {
    for(j=0;j<=2-i;j++)//设定每行*号前面的空格，每行都是2-i个
    {
      printf(" ");//打印空格 
    } 
        for(k=0;k<=2*i;k++)//循环打出2*i-i个*号
        {
      printf("*");//打印*号 
    } 
        printf("\n");//打完一行后换行
  }
  for(i=0;i<=2;i++)//循环三次，打出后三行
  {
    for(j=0;j<=i;j++)//假设每行*号前面的空格，每行都是i个
    {
      printf(" ");//打印空格
    } 
    for(k=0;k<=4-2*i;k++)//循环打出4-2*i个*号
    {
      printf("*");//打印*号 
    } 
    printf("\n");//打完一行后换行
  }
  return 0;//函数返回值为0 
}
